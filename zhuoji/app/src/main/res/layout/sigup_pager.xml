<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/phone_login_in"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="手机号："/>
        <com.xiaomishengtaiquan.Ui.classification.View.EditText_Phone
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signup_phone_input"
            android:inputType="phone"
            android:hint="输入手机号码"
            android:textSize="18dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_marginRight="12dp"
            android:drawableRight="@mipmap/black_close_icon"  />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/colornoselect"
        android:layout_marginTop="5dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/code_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="验证码："/>

        <EditText
            android:id="@+id/signup_validation_code"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="请输入验证码"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="12dp"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/signup_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlack"
            android:layout_marginRight="12dp"
            android:text="获取验证码"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:background="@color/colornoselect"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="邀请码："/>
        <com.xiaomishengtaiquan.Ui.classification.View.EditText_Phone
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/invite_code"
            android:hint="请输入邀请码"
            android:textSize="18dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_marginRight="12dp"
            android:drawableRight="@mipmap/black_close_icon"  />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:background="@color/colornoselect"
        />

</LinearLayout>
