<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/phone_login_in"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <com.xiaomishengtaiquan.Ui.classification.View.EditText_Phone
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_input"
        android:inputType="phone"
        android:hint="输入手机号码"
        android:textSize="18dp"
        android:layout_marginLeft="12dp"
        android:background="@null"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:drawableRight="@mipmap/black_close_icon"  />
</LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@color/colornoselect"
    android:layout_marginTop="12dp"
    />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/validation_code"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:hint="验证码"
        android:layout_marginTop="12dp"
        android:layout_centerVertical="true"
        android:background="@null"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:id="@+id/get_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/colorBlack"
        android:textSize="18dp"
        android:layout_marginRight="12dp"
        android:text="获取验证码"/>


</RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:background="@color/colornoselect"
    />

</LinearLayout>
